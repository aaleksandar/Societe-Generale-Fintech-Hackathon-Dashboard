!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title SocieteGeneraleFintechHackathonDashboard
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body.nav-md
    .container.body
      .main_container
        .col-md-3.left_col
          .left_col.scroll-view
            .navbar.nav_title{:style => "border: 0;"}
              %a.site_title
                %span SG Hackboard
            .clearfix
            / menu profile quick info
            .profile.clearfix
              .profile_pic
                = image_tag 'sg.png', class: 'img-circle profile_img'
              .profile_info
                %span Welcome,
                %h2 SG Admin
            / /menu profile quick info
            %br/
            / sidebar menu
            #sidebar-menu.main_menu_side.hidden-print.main_menu
              .menu_section
                %h3 Kontrolni panel
                %ul.nav.side-menu
                  %li
                    = link_to root_path do
                      %i.fa.fa-home
                      Svi klijenti

                  %li
                    = link_to root_path do
                      %i.fa.fa-list
                      Indikatori

        = yield
